<h1 class="mainHeader">Eat Da Burger!</h1>
<br>
<br>
<br>
<div class="row">
  <div class="col-1">
  </div>
  <div class="col-4 noDevoured">
    <h2>Hamburgers available for devourment:</h2>

    <ul>
      {{#each burgers}}
      {{#unless devour}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-2">

  </div>
  <div class="col-4 yesDevoured">
    <h2>Already devoured burgers:</h2>

    <ul>
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-1">
  </div>
</div>
<br>
<br>
<div class="makeBurgerForm">
  <h2>Make a Burger</h2>

  <form id="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>